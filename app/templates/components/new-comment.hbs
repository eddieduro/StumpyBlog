{{#if addNewComment}}
  <h1>New Comment</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="author">name:</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="message">Message</label>
          {{textarea value=message id="message"}}
        </div>

        <div class="form-group">
          <label for="date">Date: </label>
          {{input value=date id="date"}}
        </div>

        <button {{action 'saveComment'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'commentFormShow'}}>New Comment</button>
{{/if}}
